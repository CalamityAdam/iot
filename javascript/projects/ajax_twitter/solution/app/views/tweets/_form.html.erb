<form class="simple-form tweet-compose" data-tweets-ul="<%= tweets_ul %>">
  <label for='tweet-textarea'>What's on your mind?</label>
  <textarea id='tweet-textarea' 
    name="tweet[content]" placeholder="What's on your mind?"></textarea>
  <strong class="char-left"></strong>

  <div class="mentioned-users">
    <script type="text/template">
      <div>
        <select name="tweet[mentioned_user_ids][]">
          <% User.all.each do |user| %>
            <option value="<%= user.id %>"><%= user.username %></option>
          <% end %>
        </select>

        <a class="remove-mentioned-user" href="javascript:void(0)">Remove</a>
      </div>
    </script>

    <ul></ul>
  </div>
  <ul class='tweet-actions'>
    <li>
      <button class="add-mentioned-user" href="#">Add mention</button>
    </li>
    <li>
      <input type="submit" value="Post Tweet!">
    </li>
  </ul>
</form>
