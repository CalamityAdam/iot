<h1>All The Cats!</h1>

<ul>
  <li><a href="<%= "", cats_url %>">All</a></li>
  <% Tag.all.each do |tag| %>
    <li><a href="<%= cats_url(tag: tag.name) %>"><%= tag.name %></a></li>
  <% end %>
</ul>

<ul>
  <% @cats.each do |cat| %>
    <li>
      <%= cat_link(cat) %>

      <%= button_to "Destroy Cat!", cat_url(cat), method: :delete %>
    </li>
  <% end %>
</ul>

<a href="<%= new_cat_url %>">New Cat!</a>
